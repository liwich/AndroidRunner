<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.luismanuel.runner.resultadosActivity" android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultados"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textAlignment="center" android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distancia:"
        android:id="@+id/distancia"  android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiempo:"
        android:id="@+id/tiempo" android:layout_marginBottom="25dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ver en mapa"
        android:id="@+id/mostrar_mapa_boton"
        android:background="#FF009587" android:textSize="25dp" android:onClick="mostrarMapa"
        android:textColor="#FFFFFF" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Es necesaria conexiÃ³n a internet"
        android:textSize="20dp"
        android:textColor="#FFFD5722"
        android:textAlignment="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:id="@+id/texto"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:id="@+id/boton_cerrar"
        android:layout_gravity="center_horizontal"
        android:background="#FF3F51B4"
        android:textColor="#FFFFFF"
        android:textSize="25dp" android:onClick="cerrar"/>
</LinearLayout>
